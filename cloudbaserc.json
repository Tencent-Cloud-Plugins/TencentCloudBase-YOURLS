{
  "version": "2.0",
  "envId": "{{env.ENV_ID}}",
  "framework": {
    "name": "YOURLS",
    "plugins": {
      "client": {
        "use": "@cloudbase/framework-plugin-container",
        "inputs": {
          "serviceName": "yourls",
          "servicePath": "/",
          "uploadType": "image",
          "imageInfo": {
            "imageUrl": "ccr.ccs.tencentyun.com/tcbimages/yourls-tcb:1.8.1"
          },
          "containerPort": 80,
          "envVariables": {
            "YOURLS_DB_HOST": "{{env.DB_IP}}:{{env.DB_PORT}}",
            "YOURLS_DB_NAME": "tcb-yourls",
            "YOURLS_DB_USER": "root",
            "YOURLS_DB_PASS": "{{env.MYSQL_PASSWORD}}",
            "YOURLS_SITE": "https://${TcbHttpServiceDefaultDomain}",
            "YOURLS_USER": "{{env.YOURLS_USER}}",
            "YOURLS_PASS": "{{env.YOURLS_PASS}}"
          }
        }
      }
    },
    "requirement": {
      "addons": [
        {
          "type": "CynosDB",
          "name": "yourls",
          "envMap": {
            "IP": "DB_IP",
            "PORT": "DB_PORT",
            "USERNAME": "MYSQL_USERNAME",
            "PASSWORD": "MYSQL_PASSWORD"
          }
        }
      ],
      "environment": {
        "YOURLS_USER": {
          "description": "用户账号",
          "required": true,
          "default": "admin"
        },
        "YOURLS_PASS": {
          "description": "用户密码",
          "required": true,
          "default": "",
          "validation": {
            "rule": {
              "type": "RegExp",
              "pattern": "^(?![0-9]+$)(?![a-zA-Z]+$)[0-9A-Za-z]{6,20}$",
              "flag": "g"
            },
            "errorMessage": "字母和数字的组合，长度范围是 6 ~ 20"
          }
        }
      }
    }
  }
}